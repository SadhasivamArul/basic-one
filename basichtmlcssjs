}

js code


window.onload = function () {
    var regInput = document.getElementById("RegisterNumber");
    var nameInput = document.getElementById("StudentName");
    var form = document.getElementById("studentForm");

    var regError = document.getElementById("regError");
    var nameError = document.getElementById("nameError");

    // ðŸ”¹ Keyboard shortcuts with Alt key
    document.addEventListener("keydown", function (e) {
        if (e.altKey && (e.key === "r" || e.key === "R")) {
            e.preventDefault(); // prevent default browser behavior
            regInput.focus();
        }

        if (e.altKey && (e.key === "s" || e.key === "S")) {
            e.preventDefault();
            var regVal = regInput.value.trim();

            // Cannot move to Student Name if Register Number invalid
            if (regVal === "" || isNaN(regVal)) {
                regError.textContent = regVal === "" 
                    ? "Please enter Register Number first"
                    : "Register Number must contain numbers only";
                regInput.classList.add("error-border");
                regInput.focus();
            } else {
                regError.textContent = "";
                regInput.classList.remove("error-border");
                nameInput.focus();
            }
        }
    });

    // ðŸ”¹ Prevent mouse focus on Name if Register Number invalid
    nameInput.addEventListener("focus", function (e) {
        var regVal = regInput.value.trim();
        if (regVal === "" || isNaN(regVal)) {
            e.preventDefault();
            regError.textContent = regVal === "" 
                ? "Please enter Register Number first"
                : "Register Number must contain numbers only";
            regInput.classList.add("error-border");
            regInput.focus();
        } else {
            regError.textContent = "";
            regInput.classList.remove("error-border");
        }
    });

    // ðŸ”¹ Form submit validation
    form.onsubmit = function () {
        var regVal = regInput.value.trim();
        var nameVal = nameInput.value.trim();

        // Clear previous errors
        regError.textContent = "";
        nameError.textContent = "";
        regInput.classList.remove("error-border");
        nameInput.classList.remove("error-border");

        // Register Number validation
        if (regVal === "") {
            regError.textContent = "Please enter Register Number";
            regInput.classList.add("error-border");
            regInput.focus();
            return false;
        }
        if (isNaN(regVal)) {
            regError.textContent = "Register Number must contain numbers only";
            regInput.classList.add("error-border");
            regInput.focus();
            return false;
        }

        // Student Name validation
        if (nameVal === "") {
            nameError.textContent = "Please enter Student Name";
            nameInput.classList.add("error-border");
            nameInput.focus();
            return false;
        }
        for (var i = 0; i < nameVal.length; i++) {
            if (!isNaN(nameVal[i]) && nameVal[i] !== " ") {
                nameError.textContent = "Name should not contain numbers";
                nameInput.classList.add("error-border");
                nameInput.focus();
                return false;
            }
        }

        alert("Registered Successfully");
        return false;
    };
};

