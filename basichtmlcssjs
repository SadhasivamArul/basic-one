js code

window.onload = function () {
    var form = document.getElementById("studentForm");
    var regInput = document.getElementById("RegisterNumber");
    var nameInput = document.getElementById("StudentName");

    var regError = document.getElementById("regError");
    var nameError = document.getElementById("nameError");

    // Prevent moving to Name if Register Number is empty
    nameInput.addEventListener("focus", function (e) {
        var regVal = regInput.value.trim();
        if (regVal === "" || isNaN(regVal)) {
            e.preventDefault(); // stop focus
            regError.textContent = regVal === "" 
                ? "Please enter Register Number first" 
                : "Register Number must contain numbers only";
            regInput.classList.add("error-border");
            regInput.focus();
        } else {
            regError.textContent = "";
            regInput.classList.remove("error-border");
        }
    });

    form.onsubmit = function () {
        var Reg_number = regInput.value.trim();
        var student_name = nameInput.value.trim();

        // Clear previous errors
        regError.textContent = "";
        nameError.textContent = "";

        // Check Register Number empty
        if (Reg_number === "") {
            regError.textContent = "Please enter Register Number";
            regInput.focus();
            return false;
        }

        // Check Register Number only numbers
        if (isNaN(Reg_number)) {
             alert("Register number should contain numbers only:"+Reg_number+"\n Example:123456789");
            regError.textContent = "Register number should contain numbers only";
            regInput.focus();
            return false;
        }

        // Check Student Name empty
        if (student_name === "") {
            nameError.textContent = "Please enter Student Name";
            nameInput.focus();
            return false;
        }

        // Check Name does not contain numbers
        for (var i = 0; i < student_name.length; i++) {
            if (!isNaN(student_name[i]) && student_name[i] !== " ") {
                alert("Name should not contain numbers:"+student_name+"\n Example:Sadhasivam");
                nameError.textContent = "Name should not contain numbers";
                nameInput.focus();
                return false;
            }
        }

        alert("Registered Successfully");
        return false; // Remove if submitting to backend
    };
};

